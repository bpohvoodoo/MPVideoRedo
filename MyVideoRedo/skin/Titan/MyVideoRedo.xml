<window>
  <id>1209</id>
  <defaultcontrol>4</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <define>#header.label:MyVideoRedo</define>
  
  <controls>

    <!--!!!!!! The Bar-Properties are Case-Sensitive and proportional to the Videowindow !!!!!!-->
    <!--Start Filmstripbar-Properties
    Left=-327;Top=80;Height=169;Width=1000;LineMarkerForeground=True;LinemarkerColor=Red;LineMarkerThickness=10;
    DarkBackColor=Green;LightFillColor=Gray;DarkFillColor=Black;LightBackColor=Green;ThumbnailsCount=6
    End Filmstripbar-Properties-->
    <!--Start Cutbar-Properties
    Left=-327;Top=25;Height=45;Width=1000;LineMarkerForeground=True;LinemarkerColor=Black;LineMarkerThickness=4;
    DarkBackColor=DarkGreen;LightFillColor=Red;DarkFillColor=DarkRed;LightBackColor=Green
    End Cutbar-Properties-->

	  <control>
      <description>BG</description>
      <type>image</type>
      <id>1</id>
      <texture>background.png</texture>
      <width>1920</width>
      <height>1080</height>
      <colordiffuse>90ffffff</colordiffuse>
    </control>
    
    
	  <control>
      <description>background top overlay</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>overlay_top.png</texture>
      <colordiffuse>ccffffff</colordiffuse>
    </control>
	
    <import>common.time.xml</import>

    <control>
      <type>videowindow</type>
      <description>video window</description>
      <id>44</id>
      <posX>920</posX>
      <posY>172</posY>
      <width>430</width>
      <height>258</height>
      <colordiffuse>ffffffff</colordiffuse>
      <onleft>2</onleft>
      <onright>2</onright>
      <visible>True</visible>
    </control>

    <control>
      <type>label</type>
      <id>45</id>
      <description>Audiosync Label</description>
      <posX>800</posX>
      <posY>500</posY>
      <width>400</width>
      <label>#MyVideoRedo.Translation.AudioSyncLabel</label>
      <font>font10</font>
      <align>right</align>
      <visible>control.isvisible(46)</visible>
    </control>


    <control>
      <description>Audio Sync Slider</description>
      <type>slider</type>
      <id>46</id>
      <posX>820</posX>
      <posY>500</posY>
      <spintype>int</spintype>
      <showrange>yes</showrange>
      <textureSliderBar>osd_slider_bg.png</textureSliderBar>
      <textureSliderNib>osd_slider_nibNF.png</textureSliderNib>
      <textureSliderNibFocus>osd_slider_nibFO.png</textureSliderNibFocus>
      <onup>51</onup>
      <ondown>4</ondown>
      <onleft></onleft>
      <onright></onright>
      <visible>no</visible>
    </control>


    <control>
      <description>Background Cutlist</description>
      <type>image</type>
      <id>0</id>
      <texture>panel_large.png</texture>
      <posX>-840</posX>
      <posY>130</posY>
      <width>1300</width>
      <height>840</height>
      <colordiffuse>90ffffff</colordiffuse>
    </control>

    
    <control>
      <description>listcontrol mit den Cuts</description>
      <type>listcontrol</type>
      <id>51</id>
      <dimColor>ffffffff</dimColor>
      <posX>10</posX>
      <posY>180</posY>
      <width>440</width>
      <height>800</height>
      <animation effect="Fade" time="250">WindowOpen</animation>
      <animation effect="Fade" time="250">WindowClose</animation>
      <scrollOffset>1</scrollOffset>
      <itemWidth>50</itemWidth>
      <itemHeight>40</itemHeight>
      <textureFocus>listcontrol_item_selected_tv.png</textureFocus>
      <textureNoFocus>listcontrol_item_selected_tv.png</textureNoFocus>
      <IconXOff>12</IconXOff>
      <IconYOff>12</IconYOff>
      <textXOff>20</textXOff>
      <textXOff2>374</textXOff2>
      <keepaspectratio>no</keepaspectratio>
      <spinCanFocus>no</spinCanFocus>
      <spinPosX>350</spinPosX>
      <spinPosY>930</spinPosY>
    </control>
	
    
    <control>
      <type>label</type>
      <description>Videoduration</description>
      <posX>460</posX>
      <posY>850</posY>
      <width>400</width>
      <label>#MyVideoRedo.Translation.duration</label>
      <font>font10</font>
	    <align>left</align>
	    <visible>True</visible>
    </control>
    
    <control>
      <type>label</type>
      <description>Videoposition</description>
      <posX>200</posX>
      <posY>870</posY>
      <width>1920</width>
      <label>#MyVideoRedo.Translation.position</label>
      <font>font10</font>
	    <align>center</align>
	    <visible>True</visible>
    </control>
    
    <control>
      <type>label</type>
      <description>Videoresttime</description>
      <posX>1860</posX>
      <posY>850</posY>
      <width>400</width>
      <label>#MyVideoRedo.Translation.resttime</label>
      <font>font10</font>
	    <align>right</align>
	    <visible>True</visible>
    </control>
    
	  <control>
      <type>button</type>
      <description>Make Cut</description>
      <id>4</id>
      <posX>882</posX>
      <posY>950</posY>
	    <width>250</width>
      <onleft></onleft>
      <onright>23</onright>
	    <onup></onup>
	    <ondown></ondown>
      <label>#MyVideoRedo.Translation.MakeCut</label>
      <visible>!control.isvisible(46)</visible>
    </control>
    
    
    <control>
      <type>button</type>
      <description>Save Video</description>
      <id>23</id>
      <posX>1138</posX>
      <posY>950</posY>
	    <width>290</width>
      <onleft>4</onleft>
      <onright>999</onright>
	    <onup></onup>
	    <ondown></ondown>
      <label>#MyVideoRedo.Translation.SaveVideo</label>
      <visible>!control.isvisible(46)</visible>
    </control>

    <control>
      <type>button</type>
      <description>Tastenbelegung</description>
      <id>999</id>
      <posX>1585</posX>
      <posY>950</posY>
      <width>45</width>
	    <height>45</height>
	    <textureFocus>redoHelp_focus.png</textureFocus>
      <textureNoFocus>redoHelp_nofocus.png</textureNoFocus>
      <onleft>23</onleft>
      <onright></onright>
	    <onup>23</onup>
	    <ondown>23</ondown>
      <label>-</label>
      <visible>!control.isvisible(46)</visible>
    </control>
    
       
    <control>
      <id>27</id>
      <description>Image Help</description>
      <type>image</type>
      <posX>418</posX>
      <posY>175</posY>
      <width>450</width>
      <height>300</height>
      <texture>redoRemote.png</texture>
      <visible>False</visible>
    </control>
  	
	  <control>
      <id>13</id>
      <type>animation</type>
      <visible>false</visible>
      <posX>536</posX>
      <posY>464</posY>
      <width>31</width>
      <height>28</height>
      <textures>common.waiting.1.png;common.waiting.2.png;common.waiting.3.png;common.waiting.4.png;common.waiting.5.png;common.waiting.6.png;common.waiting.8.png</textures>
      <Duration>0:0:01.5</Duration>
    </control>
    
  </controls>
</window>

